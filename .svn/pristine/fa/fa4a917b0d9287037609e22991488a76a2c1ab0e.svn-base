<%@ Control Language="C#" AutoEventWireup="true" CodeBehind="SearchControl.ascx.cs"
    Inherits="ICBrowser.Web.SearchControl" %>
<div style="padding-left:5px">
    <table>       
       <br/>
       <br/>
       <br/>
       <br/>
       <br/>
        <tr>
            <td>
                <asp:TextBox ID="txtSearchString" runat="server"></asp:TextBox>
            </td>
            <td>
                <asp:Button ID="btnSearch" runat="server" Text="Search" OnClick="btnSearch_Click"
                    CausesValidation="false" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <asp:RadioButtonList ID="rblSearchType" runat="server" RepeatDirection="Horizontal">
                    <asp:ListItem Selected="True">Component</asp:ListItem>
                    <asp:ListItem>Requirement</asp:ListItem>
                </asp:RadioButtonList>
            </td>
        </tr>
    </table>
</div>
